@using BilConnect.Data.ViewModels
@model UsersViewModel

@{
    ViewData["Title"] = "List of All Users";
}

<style>
</style>

<div class="container">
    <!-- Admin Users Table -->
    <h4>Admin Users</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Action</th> <!-- Empty column for alignment -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.AdminUsers)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>N/A</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Club Account Users Table -->
    <h4>Club Account Users</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.ClubAccountUsers)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.IsSuspended)
                        {
                            <form asp-action="UnsuspendUser" asp-route-userId="@user.Id" method="post">
                                <button type="submit" class="btn btn-success">Unsuspend</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="SuspendUser" asp-route-userId="@user.Id" method="post">
                                <button type="submit" class="btn btn-warning">Suspend</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Regular Users Table -->
    <h4>Regular Users</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.RegularUsers)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.IsSuspended)
                        {
                            <form asp-action="UnsuspendUser" asp-route-userId="@user.Id" method="post">
                                <button type="submit" class="btn btn-success">Unsuspend</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="SuspendUser" asp-route-userId="@user.Id" method="post">
                                <button type="submit" class="btn btn-warning">Suspend</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>