@using System.Security.Claims;
@using BilConnect.Models.PostModels;
@model Post

@{
    ViewData["Title"] = "Post Details";
}

<div class="row">
    <div class="col-md-6 offset-3 alert alert-success text-center">
        <h4>Your report was submitted successfully</h4>
        <p>Our admins will take care the rest for you</p>
        <hr />
        <p>Thank you!</p>
    </div>
</div>

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <<div class="row">
                    <div class="col text-center">
                        <h1>@Model.Title</h1>
                    </div>
                </div>

                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" src="@Model.ImageURL" alt="Profile Picture"
                         style="width: 150px; height: 150px; object-fit: cover;" class="border-info rounded-circle" />
                </div>


                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.FullName" class="control-label"></label>
                    <input asp-for="User.FullName" class="form-control" readonly />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PostDate" class="control-label"></label>
                    <input asp-for="PostDate" class="form-control" readonly />
                    <span asp-validation-for="PostDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                @if (User.FindFirst(ClaimTypes.NameIdentifier)?.Value != Model.UserId) // Compare current user's ID with Model.UserId
                {
                    <a asp-controller="PostReports" asp-action="Create" asp-route-id="@Model.Id">Create New Post Report</a>
                }


            </div>
        </div>
    </div>
</div>

